<%= simple_form_for note, html: { class: "note form" } do |f| %>
  <% if note.errors.any? %>
    <div class="error-message">
      <%= quote.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.input :title, input_html: { autofocus: true } %>
  <%= f.input :content %>
  <% if note.new_record? %>
    <%= f.input :folder_id, as: :hidden, input_html: { value: params[:folder_id] } %>
  <% end %>
  <%= f.submit class: "btn btn--secondary" %>
<% end %>
